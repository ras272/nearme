{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_GOOGLE_SHEETS_API_KEY": "@google_sheets_api_key",
    "NEXT_PUBLIC_GOOGLE_SHEETS_ID": "@google_sheets_id", 
    "NEXT_PUBLIC_GOOGLE_MAPS_API_KEY": "@google_maps_api_key"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/encuentra",
      "destination": "/",
      "permanent": false
    }
  ]
}